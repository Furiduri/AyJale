<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            Task
        </div>
        <div class="card-body">
            {{#if contactos}}
            <ul class="list-group">
                {{#each contactos}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    
                    {{firstname}} /
                    {{lastname}} /
                    {{email}} /
                    {{phone}}
                    <a href="/delete-contact/{{@key}}" class="btn btn-danger">Delete</a>
                </li>
                {{/each}}
            </ul>
            {{else}}
                <h1>no</h1>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/api/talent/add" method="post">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="Firstname" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" placeholder="Lasname" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="email" placeholder="Email" class="form-control" >
                </div>
                <div class="form-group">
                    <input type="text" name="phone" placeholder="Phone" class="form-control" >
                </div>
                <button class="btn btn-primary btn-block">
                    Add
                </button>
            </form>
        </div>
    </div>
</div>